
<div class="govuk-width-container no-print" style="display: flex; justify-content: flex-end; align-items: center; margin: -50px 10px 20px 0px; font-family: 'GDS Transport', Arial, sans-serif;">
  {% if isAuthenticated %}
    <div class="user-dropdown" style="position: relative; display: flex; align-items: center; height: 100%;">
      <button class="user-avatar-btn govuk-body" style="background: #fff; color: #0b0c0c; border-radius: 50%; width: 36px; height: 36px; border: none; font-weight: bold; font-size: 1.1em; cursor: pointer; display: flex; align-items: center; justify-content: center; box-shadow: 0 1px 2px rgba(0,0,0,0.05); font-family: inherit;">
        <span style="display: block; width: 100%; text-align: center; font-family: inherit; font-size: 1.2em; line-height: 1;">{{ (user.name or user.email or 'U')[0] }}</span>
      </button>
      <div class="user-dropdown-content govuk-body" style="display: none; position: absolute; top: 110%; right: 0; background: #fff; min-width: 180px; box-shadow: 0 2px 8px rgba(0,0,0,0.15); border-radius: 6px; z-index: 100; margin-top: 4px; font-family: inherit;">
        <div style="padding: 12px 16px; color: #0b0c0c; font-weight: 500; border-bottom: 1px solid #eee; max-width: 220px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
          {{ user.name or user.email or 'User' }}
        </div>
        <a href="/auth/logout" class="govuk-link" style="display: block; padding: 12px 16px; color: #d4351c; font-weight: bold; text-decoration: none;">Sign out</a>
      </div>
    </div>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var btn = document.querySelector('.user-avatar-btn');
        var dropdown = document.querySelector('.user-dropdown-content');
        if (btn && dropdown) {
          btn.addEventListener('click', function(e) {
            e.stopPropagation();
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
          });
          document.addEventListener('click', function() {
            dropdown.style.display = 'none';
          });
        }
      });
    </script>
  {% else %}
    <a href="/" class="govuk-link" style="color: white; font-weight: bold;">Sign in</a>
  {% endif %}
</div>